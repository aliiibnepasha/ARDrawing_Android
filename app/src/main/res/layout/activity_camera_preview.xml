<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    tools:context="arcore.CameraPreviewActivity">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_button_background"
        android:src="@drawable/back_arrow_ic"
        android:scaleType="centerInside"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Capture Button Ring -->
    <View
        android:id="@+id/captureRing"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/capture_button_ring"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Capture Button (CENTERED INSIDE RING) -->
    <ImageButton
        android:id="@+id/captureButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/capture_button_background"
        android:contentDescription="Capture"
        app:layout_constraintTop_toTopOf="@id/captureRing"
        app:layout_constraintBottom_toBottomOf="@id/captureRing"
        app:layout_constraintStart_toStartOf="@id/captureRing"
        app:layout_constraintEnd_toEndOf="@id/captureRing" />

</androidx.constraintlayout.widget.ConstraintLayout>